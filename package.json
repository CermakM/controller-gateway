{
  "name": "controller-gateway",
  "version": "0.0.0",
  "description": "API gateway and controller manager",
  "main": "dist/server.js",
  "scripts": {
    "lint": "tsc --noEmit && eslint \"**/*.ts\" --quiet --fix",
    "build": "npm run build-ts && npm run lint",
    "build-sass": "node-sass src/public/css/main.scss dist/public/css/main.css",
    "build-ts": "rm -rf dist/ && tsc",
    "debug": "npm run build && npm run watch-debug",
    "start": "npm run serve",
    "serve": "node dist/server.js",
    "serve-debug": "nodemon --inspect dist/server.js",
    "test": "jest --forceExit --coverage --verbose",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-node": "nodemon dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-test": "npm run test -- --watchAll",
    "watch-ts": "tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CermakM/controller-gateway.git"
  },
  "keywords": [
    "api",
    "controller",
    "gateway",
    "node",
    "server"
  ],
  "author": "Marek Cermak <macermak@redhat.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CermakM/controller-gateway/issues"
  },
  "homepage": "https://github.com/CermakM/controller-gateway#readme",
  "dependencies": {
    "@kubernetes/client-node": "^0.10.2",
    "@types/http-errors": "^1.6.2",
    "acorn": "^7.0.0",
    "async": "^3.0.1",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "dotenv": "^8.0.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-flash": "0.0.2",
    "express-session": "^1.16.2",
    "express-validator": "^6.0.1",
    "fbgraph": "^1.4.4",
    "http-status-codes": "^1.3.2",
    "lodash": "^4.17.13",
    "lusca": "^1.6.1",
    "mongoose": "^5.6.0",
    "node-fetch": "^2.6.0",
    "nodemailer": "^6.2.1",
    "passport": "^0.4.0",
    "passport-facebook": "^3.0.0",
    "passport-local": "^1.0.0",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "winston": "^2.4.2",
    "yaml": "^1.6.0"
  },
  "devDependencies": {
    "@types/async": "^3.0.0",
    "@types/bcrypt-nodejs": "^0.0.30",
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.7",
    "@types/compression": "^0.0.36",
    "@types/dotenv": "^6.1.1",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.17.0",
    "@types/express-flash": "0.0.0",
    "@types/express-session": "^1.15.13",
    "@types/jest": "^24.0.15",
    "@types/jquery": "^3.3.29",
    "@types/lodash": "^4.14.134",
    "@types/lusca": "^1.6.0",
    "@types/mongoose": "^5.5.6",
    "@types/morgan": "^1.7.35",
    "@types/node": "^12.0.10",
    "@types/node-fetch": "^2.5.0",
    "@types/nodemailer": "^6.2.0",
    "@types/passport": "^1.0.0",
    "@types/passport-facebook": "^2.1.9",
    "@types/passport-local": "^1.0.33",
    "@types/request": "^2.48.1",
    "@types/request-promise-native": "^1.0.16",
    "@types/shelljs": "^0.8.5",
    "@types/supertest": "^2.0.7",
    "@types/webpack": "^4.39.1",
    "@types/webpack-env": "^1.14.0",
    "@types/winston": "^2.3.9",
    "@types/yaml": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "chai": "^4.2.0",
    "concurrently": "^4.1.0",
    "eslint": "^6.2.2",
    "eslint-config-google": "^0.13.0",
    "jest": "^24.8.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
