    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.3.0",
    "tsconfig-paths": "^3.8.0",
    "typescript": "^3.5.2"
  },
  "types": "src/controllers/controller.d.ts",
  "_moduleAliases": {
    "@": "dist"
  }
}
